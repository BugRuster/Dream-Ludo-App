<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:id="@+id/bottom_sheet_number"
    android:background="@drawable/top_right_rounded"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/close"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="#082240"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your Mobile Number"
        android:layout_margin="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="13dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country Code"
                android:textAlignment="textStart"
                android:textSize="12sp"
                android:textColor="?android:textColorHint"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="0dp"/>
            <com.hbb20.CountryCodePicker
                android:id="@+id/countryCodePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ccp_defaultPhoneCode="91"
                app:ccp_showNameCode="false"
                app:ccp_showFlag="true"
                app:ccp_showPhoneCode="true"
                app:ccp_textSize="@dimen/newsMoreTextSize"
                app:ccp_autoDetectCountry="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="0dp"
                android:background="@color/colorAccent"/>
        </LinearLayout>
        <View
            android:layout_width="10dp"
            android:layout_height="1dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/loginViewsMargin">
            <EditText
                android:id="@+id/editTextMobile"
                style="@style/modifiedEditText"
                android:inputType="phone"
                android:maxLines="1"
                android:hint="Mobile"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <TextView
            android:visibility="gone"
            android:textSize="12sp"
            android:id="@+id/img_cc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coupon Code"
            android:layout_marginStart="15dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textCouponSocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:layout_below="@+id/img_cc">
            <EditText
                android:id="@+id/et_coupon_social"
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Refer Code (Optional)"
                android:textAllCaps="false"
                android:imeOptions="actionDone"/>
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.cardview.widget.CardView
            android:layout_below="@+id/img_cc"
            android:id="@+id/cv_apply_coupon_social"
            android:visibility="visible"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="end"
            android:layout_alignParentEnd="true"
            app:cardCornerRadius="15dp">
            <RelativeLayout
                android:background="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical|center_horizontal"
                    android:id="@+id/txt_apply_social"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Apply"
                    android:textAlignment="center"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:textColor="@color/colorPrimary"
            android:id="@+id/img_remove_coupon_social"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/promo_applied_text_social"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="XYZ promo applied"/>
        <ImageView
            android:id="@+id/img_check_social"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_checks"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/card_submit_number"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="60dp"
        android:paddingEnd="60dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        style="@style/loginButton">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_checkmark"/>
        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/txt_submit_for_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginStart="15dp"/>
    </LinearLayout>
</LinearLayout>
