<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:weightSum="10">

    <RelativeLayout
        android:id="@+id/oppMsgRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/message_profile_layout"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="0"
            android:layout_alignParentStart="true"/>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/message_profile_right_layout"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="0"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/message_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_text_layout"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/message_profile_layout"
            android:padding="0dp"
            android:text=""
            android:textColor="#444444"
            android:textSize="14sp"
            android:textAlignment="textStart"/>

        <TextView
            android:id="@+id/message_text_right_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_text_right_layout"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/message_profile_right_layout"
            android:padding="0dp"
            android:text=""
            android:textColor="#444444"
            android:textSize="14sp"
            android:textAlignment="textEnd"/>

        <TextView
            android:id="@+id/name_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/message_profile_layout"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name_text_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/message_profile_right_layout"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/name_text_layout"
            android:text=""
            android:textSize="12sp" />

        <TextView
            android:id="@+id/time_text_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_toStartOf="@+id/name_text_right_layout"
            android:text=""
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/message_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/message_text_layout"
            android:layout_below="@+id/message_text_layout"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/message_profile_layout"
            android:padding="0dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/message_image_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/message_text_right_layout"
            android:layout_below="@+id/message_text_right_layout"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/message_profile_right_layout"
            android:padding="0dp"
            android:scaleType="centerCrop" />
    </RelativeLayout>

</RelativeLayout>